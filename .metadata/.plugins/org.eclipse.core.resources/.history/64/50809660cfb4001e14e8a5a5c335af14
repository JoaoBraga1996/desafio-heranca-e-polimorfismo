package educ360;

import java.util.Random;
import java.util.Scanner;

public class ProgramaTeste {

	public static void main(String[] args) {
		
		
		int[] n = new int[3];
		n[0] = 2;
		n[1] = 4;
		n[2] = 6;
		
		
		double soma = 0;
		
		for (int i = 0; i < n.length; i++) {
			soma += n[i] ;
			
		}
		
		double media = soma / 3;
		
		
		
		
		System.out.println(soma);
		System.out.println(media);
		

	}
}
